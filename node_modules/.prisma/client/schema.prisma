generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String @id @default(uuid())
  firstName String
  lastName  String
  email     String @unique
  password  String
  role      String
}

model RevokedToken {
  id    String @id @default(uuid())
  token String
}

model Job {
  id              String   @id @default(uuid())
  title           String
  companyName     String
  description     String
  city            String
  country         String
  type            String
  experienceLevel Int
  applyUrl        String
  applicants      Int      @default(0)
  postedAt        DateTime @default(now())
}
